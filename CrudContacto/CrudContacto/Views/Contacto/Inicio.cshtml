@model List<CrudContacto.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de Contactos</h4>
            </div>
        </div>
        <div class="panel-body">
            <!--Al pinchar sobre el boton nos redirige a la pagina Registrar, que es un metodo, pero devuelve una view, nos dirige a la pagina html-->
            <a class=" btn btn-success" href="@Url.Action("Registrar","Contacto")">Crear Nuevo</a> 
            <hr />
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Telefono</th>
                            <th>Email</th>
                            <th style="width:150px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Se iteran los contactos (Clase Contacto) que haya en el modelo de la DB -->
                        @foreach (CrudContacto.Models.Contacto item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido</td>
                                <td>@item.Telefono</td>
                                <td>@item.Email</td>
                                <td>
                                    <a class=" btn btn-primary btn-sm" href="@Url.Action("Editar","Contacto", new {idContacto = item.IdContacto })">Editar</a>
                                    <a class=" btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>

    </div>


</div>


